<Window x:Class="AudioEffector.Views.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input" Height="150" Width="300" WindowStartupLocation="CenterScreen"
        Background="#101015" Foreground="White" ResizeMode="NoResize" WindowStyle="None">
    <Border BorderBrush="#303040" BorderThickness="1">
        <StackPanel Margin="20">
            <TextBlock Text="{Binding Message}" Foreground="White" Margin="0,0,0,10"/>
            <TextBox x:Name="InputTextBox" Text="{Binding InputText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     Background="#202025" Foreground="White" BorderBrush="#404050" Padding="5"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="OK" IsDefault="True" Click="OkButton_Click" Width="60" Margin="0,0,10,0" Background="#00FFFF" Foreground="Black"/>
                <Button Content="Cancel" IsCancel="True" Width="60" Background="#404040" Foreground="White"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
