<Application x:Class="AudioEffector.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AudioEffector"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <local:BoolToVisConverter x:Key="BoolToVis"/>
        <SolidColorBrush x:Key="NeonCyanBrush" Color="#00FFFF"/>
        
        <!-- Vertical Slider Style for EQ -->
        <Style x:Key="NeonSliderStyle" TargetType="Slider">
            <Setter Property="Orientation" Value="Vertical"/>
            <Setter Property="Foreground" Value="{StaticResource NeonCyanBrush}"/>
            <Setter Property="Background" Value="#202020"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="3" Width="6" 
                                    HorizontalAlignment="Center"/>
                            <Track x:Name="PART_Track">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="Slider.DecreaseLarge" Opacity="0"/>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="Slider.IncreaseLarge" Opacity="0"/>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Width="20" Height="20">
                                        <Thumb.Template>
                                            <ControlTemplate>
                                                <Ellipse Fill="{StaticResource NeonCyanBrush}" 
                                                         Width="20" Height="20" 
                                                         Stroke="#FFFFFF" StrokeThickness="2"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
