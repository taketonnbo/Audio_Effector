<Window x:Class="AudioEffector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudioEffector"
        xmlns:vm="clr-namespace:AudioEffector.ViewModels"
        mc:Ignorable="d"
        Title="Audio Effector" Height="700" Width="1100"
        Background="#050510" Foreground="White">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <local:BoolToVisConverter x:Key="BoolToVis"/>
        
        <!-- ScrollBar Style (Simplified) -->
        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#404040"/>
        </Style>

        <!-- Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" MinWidth="200"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*" MinWidth="400"/>
        </Grid.ColumnDefinitions>

        <!-- Left Column: Library -->
        <Grid Grid.Column="0" Background="#0A0A15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="BROWSER" Foreground="White" FontSize="18" HorizontalAlignment="Center" Margin="0,20,0,10" Opacity="0.7" FontFamily="Segoe UI Light"/>
            
            
            <StackPanel Grid.Row="1" Margin="10,0,10,10">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                     <RadioButton Content="LIB" Command="{Binding ShowLibraryCommand}" IsChecked="{Binding IsLibraryVisible, Mode=OneWay}" Width="40" Height="25" Margin="0,0,5,0" Style="{StaticResource {x:Type ToggleButton}}" Background="#202020" ToolTip="Library"/>
                     <RadioButton Content="FAV" Command="{Binding ShowFavoritesCommand}" IsChecked="{Binding IsPlaylistTracksVisible, Mode=OneWay}" Width="40" Height="25" Margin="0,0,5,0" Style="{StaticResource {x:Type ToggleButton}}" Background="#202020" ToolTip="Favorites"/>
                     <RadioButton Content="PL" Command="{Binding ShowPlaylistSelectorCommand}" IsChecked="{Binding IsPlaylistSelectorVisible, Mode=OneWay}" Width="40" Height="25" Style="{StaticResource {x:Type ToggleButton}}" Background="#202020" ToolTip="Playlists"/>
                </StackPanel>
                <Button Content="SCAN FOLDER" Command="{Binding OpenFolderCommand}" 
 
                            HorizontalAlignment="Stretch" Margin="0,0,0,10"
                            Foreground="{StaticResource NeonCyanBrush}" BorderBrush="{StaticResource NeonCyanBrush}" BorderThickness="1" Padding="10,5">
                        <Button.Template>
                             <ControlTemplate TargetType="Button">
                                <Border Background="Transparent" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Content="{Binding IsSelectionMode, Converter={StaticResource BoolToVis}, ConverterParameter=SELECT|CANCEL}" 
                            Command="{Binding ToggleSelectionModeCommand}" 
                            HorizontalAlignment="Stretch" Margin="0,0,0,10"
                            Foreground="White" BorderBrush="#404040" BorderThickness="1" Padding="10,5">
                         <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Content" Value="SELECT"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsSelectionMode}" Value="True">
                                        <Setter Property="Content" Value="CANCEL"/>
                                        <Setter Property="Foreground" Value="#FF4040"/>
                                        <Setter Property="BorderBrush" Value="#FF4040"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                             <ControlTemplate TargetType="Button">
                                <Border Background="Transparent" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Content="ADD SELECTED" Command="{Binding AddSelectedToPlaylistCommand}" 
                            HorizontalAlignment="Stretch" Margin="0,0,0,10"
                            Foreground="#00FFFF" BorderBrush="#00FFFF" BorderThickness="1" Padding="10,5"
                            Visibility="{Binding IsSelectionMode, Converter={StaticResource BoolToVis}}">
                        <Button.Template>
                             <ControlTemplate TargetType="Button">
                                <Border Background="Transparent" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox Grid.Column="0" ItemsSource="{Binding SortOptions}" SelectedItem="{Binding SelectedSortOption}" 
                                  Height="25" VerticalContentAlignment="Center" Margin="0,0,5,0"/>
                        
                        <Button Grid.Column="1" Command="{Binding ToggleSortDirectionCommand}" Width="30" Height="25" ToolTip="Toggle Sort Direction" Margin="0,0,5,0">
                            <Path Fill="White" Stretch="Uniform" Width="10" Height="10">
                                <Path.Style>
                                    <Style TargetType="Path">
                                        <Setter Property="Data" Value="M7,10L12,15L17,10H7Z"/> 
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsAscending}" Value="True">
                                                <Setter Property="Data" Value="M7,14L12,9L17,14H7Z"/> 
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Path.Style>
                            </Path>
                        </Button>

                        <Button Grid.Column="2" Command="{Binding ToggleViewCommand}" Width="30" Height="25" ToolTip="Toggle View">
                            <Path Data="M4,4H8V8H4V4M10,4H14V8H10V4M16,4H20V8H16V4M4,10H8V14H4V10M10,10H14V14H10V10M16,10H20V14H16V10M4,16H8V20H4V16M10,16H14V20H10V16M16,16H20V20H16V16" 
                                  Fill="White" Stretch="Uniform" Margin="5" Visibility="{Binding IsGridView, Converter={StaticResource BoolToVis}, ConverterParameter=Invert}"/>
                        </Button>
                        <Button Grid.Column="2" Command="{Binding ToggleViewCommand}" Width="30" Height="25" ToolTip="Toggle View" Visibility="{Binding IsGridView, Converter={StaticResource BoolToVis}}">
                             <Path Data="M4,5H20V19H4V5M4,5H20V7H4V5M4,9H20V11H4V9M4,13H20V15H4V13M4,17H20V19H4V17" 
                                   Fill="White" Stretch="Uniform" Margin="5"/>
                        </Button>
                    </Grid>
            </StackPanel>

            <Grid Grid.Row="2" Visibility="{Binding IsLibraryVisible, Converter={StaticResource BoolToVis}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Visibility="{Binding IsListView, Converter={StaticResource BoolToVis}}">

                    <ItemsControl ItemsSource="{Binding Albums}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Expander Background="Transparent" BorderThickness="0" Margin="5">
                                    <Expander.Header>
                                        <Grid Width="250">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="50"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Column="0" Width="40" Height="40" CornerRadius="4" Background="#202020">
                                                <Image Source="{Binding CoverImage}" Stretch="UniformToFill"/>
                                            </Border>
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0">
                                                <TextBlock Text="{Binding Title}" Foreground="White" FontSize="14" TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding Artist}" Foreground="#808080" FontSize="11" TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                        </Grid>
                                    </Expander.Header>
                                    <ItemsControl ItemsSource="{Binding Tracks}" Margin="20,5,0,0">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Button Command="{Binding DataContext.PlayTrackCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}"
                                                        HorizontalContentAlignment="Left" Margin="0,2" Background="Transparent" BorderThickness="0">
                                                     <!-- Context menu removed -->

                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <CheckBox Grid.Column="0" IsChecked="{Binding IsSelected}" VerticalAlignment="Center" Margin="0,0,5,0"
                                                                  Visibility="{Binding DataContext.IsSelectionMode, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVis}}"/>
                                                        <TextBlock Grid.Column="1" Text="{Binding Title}" Foreground="#CCCCCC" FontSize="12"/>
                                                        <Path Grid.Column="2" Data="M12,21.35L10.55,20.03C5.4,15.36 2,12.27 2,8.5C2,5.41 4.42,3 7.5,3C9.24,3 10.91,3.81 12,5.08C13.09,3.81 14.76,3 16.5,3C19.58,3 22,5.41 22,8.5C22,12.27 18.6,15.36 13.45,20.03L12,21.35Z" 
                                                              Fill="#FF4081" Width="10" Height="10" Stretch="Uniform" Visibility="{Binding IsFavorite, Converter={StaticResource BoolToVis}}" Margin="0,0,5,0"/>
                                                        <Button Grid.Column="3" Content="+" ToolTip="Add to Playlist" 
                                                                Command="{Binding DataContext.ShowAddToPlaylistDialogCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                CommandParameter="{Binding}"
                                                                Width="18" Height="18" FontSize="14" FontWeight="Bold"
                                                                Background="Transparent" Foreground="#00FFFF" BorderThickness="0" Padding="0" Margin="0"/>
                                                    </Grid>
                                                </Button>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Expander>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Visibility="{Binding IsGridView, Converter={StaticResource BoolToVis}}">
                    <ItemsControl ItemsSource="{Binding Albums}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Expander Background="Transparent" BorderThickness="0" Margin="5" Width="130">
                                    <Expander.Header>
                                        <Grid Width="130" Height="160">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="130"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Border Grid.Row="0" CornerRadius="8" Background="#202020" Margin="5">
                                                <Image Source="{Binding CoverImage}" Stretch="UniformToFill"/>
                                            </Border>
                                            <TextBlock Grid.Row="1" Text="{Binding Title}" Foreground="White" FontSize="12" TextTrimming="CharacterEllipsis" HorizontalAlignment="Center" Margin="5,2,5,0"/>
                                            <TextBlock Grid.Row="2" Text="{Binding Artist}" Foreground="#808080" FontSize="10" TextTrimming="CharacterEllipsis" HorizontalAlignment="Center" Margin="5,0,5,5"/>
                                        </Grid>
                                    </Expander.Header>
                                    <ItemsControl ItemsSource="{Binding Tracks}" Margin="5,0,0,0">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Button Command="{Binding DataContext.PlayTrackCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}"
                                                        HorizontalContentAlignment="Left" Margin="0,2" Background="Transparent" BorderThickness="0">
                                                     <!-- Context menu removed -->

                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <CheckBox Grid.Column="0" IsChecked="{Binding IsSelected}" VerticalAlignment="Center" Margin="0,0,5,0"
                                                                  Visibility="{Binding DataContext.IsSelectionMode, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVis}}"/>
                                                        <TextBlock Grid.Column="1" Text="{Binding Title}" Foreground="#CCCCCC" FontSize="11" TextTrimming="CharacterEllipsis"/>
                                                        <Button Grid.Column="2" Content="+" ToolTip="Add to Playlist" 
                                                                Command="{Binding DataContext.ShowAddToPlaylistDialogCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                CommandParameter="{Binding}"
                                                                Width="18" Height="18" FontSize="14" FontWeight="Bold"
                                                                Background="Transparent" Foreground="#00FFFF" BorderThickness="0" Padding="0" Margin="0"/>
                                                    </Grid>
                                                </Button>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Expander>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

            </Grid>

            <!-- Playlist Selector View -->
            <Grid Grid.Row="2" Visibility="{Binding IsPlaylistSelectorVisible, Converter={StaticResource BoolToVis}}">
                 <Grid.RowDefinitions>
                     <RowDefinition Height="Auto"/>
                     <RowDefinition Height="*"/>
                 </Grid.RowDefinitions>
                 <Button Grid.Row="0" Content="+ NEW PLAYLIST" Command="{Binding CreatePlaylistCommand}" 
                         HorizontalAlignment="Stretch" Margin="10,0,10,10" Background="#202020" Height="30"/>
                 <ListBox Grid.Row="1" ItemsSource="{Binding UserPlaylists}" Background="Transparent" BorderThickness="0" Margin="10,0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding Name}" Command="{Binding DataContext.ShowPlaylistCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" 
                                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Background="Transparent" Foreground="White" Margin="0,2" Padding="5"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                 </ListBox>
            </Grid>

            <!-- Playlist Tracks View -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Visibility="{Binding IsPlaylistTracksVisible, Converter={StaticResource BoolToVis}}">
                 <ItemsControl ItemsSource="{Binding PlaylistTracks}">
                     <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Command="{Binding DataContext.PlayTrackCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}"
                                    HorizontalContentAlignment="Left" Margin="5,2" Background="Transparent" BorderThickness="0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <CheckBox Grid.Column="0" IsChecked="{Binding IsSelected}" VerticalAlignment="Center" Margin="0,0,5,0"
                                              Visibility="{Binding DataContext.IsSelectionMode, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVis}}"/>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding Title}" Foreground="White" FontSize="12"/>
                                        <TextBlock Text="{Binding Artist}" Foreground="#808080" FontSize="10"/>
                                    </StackPanel>
                                    <Path Grid.Column="2" Data="M12,21.35L10.55,20.03C5.4,15.36 2,12.27 2,8.5C2,5.41 4.42,3 7.5,3C9.24,3 10.91,3.81 12,5.08C13.09,3.81 14.76,3 16.5,3C19.58,3 22,5.41 22,8.5C22,12.27 18.6,15.36 13.45,20.03L12,21.35Z" 
                                          Fill="#FF4081" Width="10" Height="10" Stretch="Uniform" Visibility="{Binding IsFavorite, Converter={StaticResource BoolToVis}}" Margin="0,0,5,0"/>
                                    <Button Grid.Column="3" Content="+" ToolTip="Add to Playlist" 
                                            Command="{Binding DataContext.ShowAddToPlaylistDialogCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Width="18" Height="18" FontSize="14" FontWeight="Bold"
                                            Background="Transparent" Foreground="#00FFFF" BorderThickness="0" Padding="0" Margin="0"/>
                                </Grid>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                 </ItemsControl>
            </ScrollViewer>
            
            <Grid Grid.Row="0" Grid.RowSpan="3" Background="#80000000" Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="LOADING..." Foreground="{StaticResource NeonCyanBrush}" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <!-- Simple spinner animation could be added here, using text for now -->
                </StackPanel>
            </Grid>
        </Grid>


        <!-- GridSplitter (Vertical) -->
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="#202020"/>

        <!-- Right Column: Player & EQ -->
        <Grid Grid.Column="2" Background="#050510">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MinHeight="50"/> <!-- Now Playing Info -->
                <RowDefinition Height="Auto"/> <!-- Splitter -->
                <RowDefinition Height="Auto"/> <!-- Controls -->
                <RowDefinition Height="Auto"/> <!-- Splitter -->
                <RowDefinition Height="*" MinHeight="50"/>    <!-- EQ -->
                <RowDefinition Height="Auto"/> <!-- Presets -->
            </Grid.RowDefinitions>

            <!-- Now Playing Info -->
            <Grid Grid.Row="0" Margin="20" Visibility="{Binding IsNowPlayingVisible, Converter={StaticResource BoolToVis}}">
                <Border Background="#101020" CornerRadius="10" BorderBrush="#303040" BorderThickness="1">
                    <Grid Margin="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Large Cover Art -->
                        <Border Grid.Column="0" Width="120" Height="120" CornerRadius="4" Background="#000">
                            <Image Source="{Binding CurrentTrack.CoverImage}" Stretch="UniformToFill"/>
                        </Border>
                        
                        <!-- Info & Progress -->
                        <Grid Grid.Column="1" Margin="20,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding CurrentTrack.Title, FallbackValue='No Track Selected'}" FontSize="24" Foreground="White" FontFamily="Segoe UI Light" TextTrimming="CharacterEllipsis"/>
                                <Button Grid.Column="1" Command="{Binding ToggleFavoriteCommand}" Margin="10,0,0,0">
                                    <Path Data="M12,21.35L10.55,20.03C5.4,15.36 2,12.27 2,8.5C2,5.41 4.42,3 7.5,3C9.24,3 10.91,3.81 12,5.08C13.09,3.81 14.76,3 16.5,3C19.58,3 22,5.41 22,8.5C22,12.27 18.6,15.36 13.45,20.03L12,21.35Z" 
                                          Width="24" Height="24" Stretch="Uniform">
                                        <Path.Style>
                                            <Style TargetType="Path">
                                                <Setter Property="Fill" Value="#404040"/> <!-- Default gray -->
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding CurrentTrack.IsFavorite}" Value="True">
                                                        <Setter Property="Fill" Value="#FF4081"/> <!-- Pink when favorite -->
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Path.Style>
                                    </Path>
                                </Button>
                                
                            </Grid>
                            
                            <TextBlock Grid.Row="1" Text="{Binding CurrentTrack.Artist, FallbackValue=''}" FontSize="16" Foreground="#AAAAAA" Margin="0,5,0,0" TextTrimming="CharacterEllipsis"/>
                            
                            <!-- Quality Info -->
                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5,0,0">
                                <Border Background="#202020" CornerRadius="3" Padding="6,2" Margin="0,0,8,0" VerticalAlignment="Center">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CurrentTrack.QualityLabel}" Value="">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding CurrentTrack.QualityLabel}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="{Binding CurrentTrack.QualityLabel}" FontSize="10" Foreground="#FFD700" FontWeight="Bold"/>
                                </Border>
                                <TextBlock Text="{Binding CurrentTrack.QualityInfo}" FontSize="11" Foreground="#666666" VerticalAlignment="Center" FontFamily="Consolas"/>
                            </StackPanel>
                            
                            <!-- Seek Bar -->
                            <Grid Grid.Row="3" VerticalAlignment="Bottom">
                                <Slider Value="{Binding Progress, Mode=TwoWay}" Maximum="100" Height="20" VerticalAlignment="Center" 
                                        IsMoveToPointEnabled="True"
                                        Thumb.DragStarted="Slider_DragStarted"
                                        Thumb.DragCompleted="Slider_DragCompleted">
                                </Slider>
                                <Grid Margin="0,15,0,0">
                                    <TextBlock Text="{Binding CurrentTimeDisplay}" HorizontalAlignment="Left" Foreground="#606060" FontSize="12"/>
                                    <TextBlock Text="{Binding TotalTimeDisplay}" HorizontalAlignment="Right" Foreground="#606060" FontSize="12"/>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
            
            <!-- Splitter -->
            <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Center" Background="#202020" Visibility="{Binding IsNowPlayingVisible, Converter={StaticResource BoolToVis}}"/>

            <!-- Playback Controls & Toggles -->
            <Grid Grid.Row="2" Margin="0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Toggles -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="20,0">
                    <CheckBox Content="INFO" IsChecked="{Binding IsNowPlayingVisible}" Foreground="White" Margin="0,0,10,0"/>
                    <CheckBox Content="EQ" IsChecked="{Binding IsEqualizerVisible}" Foreground="White"/>
                </StackPanel>

                <!-- Center Controls -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- Shuffle -->
                    <ToggleButton IsChecked="{Binding IsShuffleEnabled}" Margin="0,0,20,0" Background="Transparent" BorderThickness="0">
                         <Path Data="M10.59,9.17L5.41,4L4,5.41L9.17,10.58L10.59,9.17M14.5,4L16.54,6.04L4,18.59L5.41,20L17.96,7.46L20,9.5V4M14.83,13.41L13.42,14.83L16.55,17.96L14.5,20H20V14.5L17.96,16.54" 
                               Width="20" Height="20" Stretch="Uniform">
                             <Path.Style>
                                <Style TargetType="Path">
                                    <Setter Property="Fill" Value="#606060"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsShuffleEnabled}" Value="True">
                                            <Setter Property="Fill" Value="{StaticResource NeonCyanBrush}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Path.Style>
                         </Path>
                    </ToggleButton>

                    <!-- Repeat -->
                    <ToggleButton Command="{Binding ToggleRepeatCommand}" IsChecked="{Binding IsAlbumRepeat, Mode=OneWay}" Margin="0,0,20,0" Width="20" Height="20" Background="Transparent" BorderThickness="0">
                         <ToggleButton.Template>
                            <ControlTemplate TargetType="ToggleButton">
                                <Grid Background="Transparent">
                                    <Path Data="M7,7h10v3l4-4l-4-4v3H5v6h2V7z M17,17H7v-3l-4,4l4,4v-3h12v-6h-2V17z" Stretch="Uniform" Width="15" Height="15">
                                        <Path.Style>
                                            <Style TargetType="Path">
                                                <Setter Property="Fill" Value="#606060"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsAlbumRepeat}" Value="True">
                                                        <Setter Property="Fill" Value="{StaticResource NeonCyanBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Path.Style>
                                    </Path>
                                </Grid>
                            </ControlTemplate>
                        </ToggleButton.Template>
                    </ToggleButton>

                    <!-- Prev -->
                    <Button Command="{Binding PreviousCommand}" Margin="20,0">
                        <Path Data="M11,18V6l-8.5,6L11,18z M11.5,12l8.5,6V6L11.5,12z" Fill="{StaticResource NeonCyanBrush}" Width="20" Height="20" Stretch="Uniform"/>
                    </Button>
                    
                    <!-- Play/Pause -->
                    <Button Command="{Binding TogglePlayPauseCommand}" Width="60" Height="60">
                        <Grid>
                            <Ellipse Stroke="{StaticResource NeonCyanBrush}" StrokeThickness="2" Fill="Transparent"/>
                            <Path Data="M8,5.14V19.14L19,12.14L8,5.14Z" Fill="White" Width="20" Height="20" Stretch="Uniform" Margin="4,0,0,0"
                                  Visibility="{Binding IsPlaying, Converter={StaticResource BoolToVis}, ConverterParameter=Invert}"/>
                            <Path Data="M6,19h4V5H6V19z M14,5v14h4V5H14z" Fill="White" Width="20" Height="20" Stretch="Uniform"
                                  Visibility="{Binding IsPlaying, Converter={StaticResource BoolToVis}}"/>
                        </Grid>
                    </Button>

                    <!-- Next -->
                    <Button Command="{Binding NextCommand}" Margin="20,0">
                        <Path Data="M4,18l8.5-6L4,6V18z M13,6v12l8.5-6L13,6z" Fill="{StaticResource NeonCyanBrush}" Width="20" Height="20" Stretch="Uniform"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Splitter -->
            <GridSplitter Grid.Row="3" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Center" Background="#202020" Visibility="{Binding IsEqualizerVisible, Converter={StaticResource BoolToVis}}"/>

            <!-- EQ Sliders (Resizable Area) -->
            <Grid Grid.Row="4" Margin="20,0" Visibility="{Binding IsEqualizerVisible, Converter={StaticResource BoolToVis}}">
                <ItemsControl ItemsSource="{Binding Bands}" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="5,0" Width="35">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="{Binding Label}" HorizontalAlignment="Center" Foreground="#808080" FontSize="10" Margin="0,0,0,10"/>
                                <Slider Grid.Row="1" Style="{StaticResource NeonSliderStyle}" Minimum="-10" Maximum="10" Value="{Binding Gain}" MinHeight="150"/>
                                <Ellipse Grid.Row="1" Width="4" Height="4" Fill="{StaticResource NeonCyanBrush}" VerticalAlignment="Center" Opacity="0.5" IsHitTestVisible="False"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>

            <!-- Presets -->
            <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,20">
                <ComboBox ItemsSource="{Binding Presets}" SelectedItem="{Binding SelectedPreset}" DisplayMemberPath="Name" 
                          Width="200" Height="30" VerticalContentAlignment="Center" Margin="0,0,10,0"/>
                <Button Content="SAVE PRESET" Command="{Binding SavePresetCommand}" Foreground="{StaticResource NeonCyanBrush}" BorderBrush="{StaticResource NeonCyanBrush}" BorderThickness="1" Padding="10,5">
                     <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="15">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="RESET" Command="{Binding ResetCommand}" Foreground="#808080" Margin="10,0,0,0"/>
                <Button Content="DELETE" Command="{Binding DeletePresetCommand}" Foreground="#FF4040" Margin="10,0,0,0" BorderThickness="0" Background="Transparent"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
